{
  "author": "PubPeer",
  "content_scripts": [
    {
      "js": [
        "sanitizer.js",
        "pubpeer.js"
      ],
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "description": "Show links to existing PubPeer comments",
  "icons": {
    "16": "pubpeer-16x16.png",
    "48": "pubpeer-48x48.png",
    "128": "pubpeer-128x128.png"
  },
  "manifest_version": 2,
  "name": "PubPeer",
  "permissions": [
    "https://api.pubpeer.com/",
    "https://pubpeer.com/",
    "https://pubpeer.dev/",
    "storage"
  ],
  "version": "0.3.2",
  "-ms-preload": {
    "backgroundScript": "backgroundScriptsAPIBridge.js",
    "contentScript": "contentScriptsAPIBridge.js"
  }
}